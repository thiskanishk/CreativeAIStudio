# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/creative-ai-studio

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Razorpay (Alternative to Stripe)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Replicate (for AI Image/Video)
REPLICATE_API_KEY=your_replicate_api_key

# Client URL (CORS)
CLIENT_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Redis (for queue and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# File Upload Limits
MAX_FILE_SIZE=50 # In MB
MAX_FILES_PER_REQUEST=10

# Email Service
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=Creative AI Studio <your_email@gmail.com>

# Security
CORS_MAX_AGE=86400 # 1 day in seconds
RATE_LIMIT_WINDOW_MS=60000 # 1 minute in milliseconds
RATE_LIMIT_MAX=60 # 60 requests per minute
RATE_LIMIT_MAX_PREMIUM=120 # 120 requests per minute for premium users 